<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>





    <!--弹窗动画-->
    <style name="PopupWindow">
        <item name="android:windowEnterAnimation">@anim/start_indicator_trans_in</item>
        <item name="android:windowExitAnimation">@anim/start_indicator_trans_out</item>
    </style>


    <!-- 默认按钮 -->
    <style name="bt_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/selector_bt</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>

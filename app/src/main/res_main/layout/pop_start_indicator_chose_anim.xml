                android:background="#888" />

            <TextView
                android:id="@+id/tv_zoomOutPageTransformer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="zoomOutPageTransformer"
                android:textColor="#118"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1px"
                android:background="#888" />

            <TextView
                android:id="@+id/tv_zoomOutSlideTransformer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="zoomOutSlideTransformer"
                android:textColor="#118"
                android:textSize="18sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1px"
                android:background="#888" />

            <TextView
                android:id="@+id/tv_zoomOutTransformer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="zoomOutTransformer"
                android:textColor="#118"
                android:textSize="18sp" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/shape_start_indicator_pop">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="取消"
            android:textColor="#118"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- 默认按钮样式 -->
    <style name="view_bt_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_selector_default</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="view_bt_default_no_padding">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/button_selector_default</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
    </style>


    <style name="view_bt_default_weight">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/button_selector_default</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="view_bt_default_weight_no_padding">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/button_selector_default</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- 默认单行文本样式 -->
    <style name="view_tv_default_single_line">
        <item name="android:background">#1f00</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333</item>
    </style>

</resources>
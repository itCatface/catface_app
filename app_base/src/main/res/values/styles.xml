<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 默认按钮样式 -->
    <style name="view_bt_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_selector_default</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="view_bt_default_no_padding">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/button_selector_default</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
    </style>


    <style name="view_bt_default_weight">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/button_selector_default</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="view_bt_default_weight_no_padding">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/button_selector_default</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- 默认单行文本样式 -->
    <style name="view_tv_default_single_line">
        <item name="android:background">#1f00</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333</item>
    </style>


    <!-- scrollbar样式 -->
    <style name="scrollbar_scroll_bar_style_default">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_blue</item>
        <item name="android:scrollbarTrackVertical">@drawable/shape_scrollbar_bottom</item>
    </style>


    <!-- for font type全局字体 -->
    <style name="AppThemeForFont" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>


</resources>
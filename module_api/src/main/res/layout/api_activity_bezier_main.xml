<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cc.catface.api.view.demo104_bezier.Wave0View
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <cc.catface.api.view.demo104_bezier.PaintView
        android:id="@+id/pv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bt"
        android:text="清空(lineTo)"
        android:textAllCaps="false"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_paint2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/selector_bt"
            android:text="画图(bezier)"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_wave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bt"
            android:text="波浪效果" />

    </LinearLayout>

</RelativeLayout>
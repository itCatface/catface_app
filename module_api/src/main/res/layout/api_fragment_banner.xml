<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cc.catface.api.banner.edit.RVDefaultBannerView
            android:id="@+id/rvdbv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#10f0"
            app:layout_constraintBottom_toTopOf="@id/rvcbv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <cc.catface.api.banner.edit.RVCustomBannerView
            android:id="@+id/rvcbv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#1f00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvdbv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
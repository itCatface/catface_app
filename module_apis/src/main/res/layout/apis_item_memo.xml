<?xml version="1.0" encoding="utf-8"?>
<cc.catface.base.utils.android.view.recyclerview.swipe.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sil"
    android:layout_width="match_parent"
    android:layout_height="80dp">


    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f00"
            android:gravity="center"
            android:text="置顶"/>

        <TextView
            android:id="@+id/tv_left_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0f0"
            android:gravity="center"
            android:text="点我试试看"/>

    </LinearLayout>

    <!--<TextView
        android:id="@left_1menu"
        android:layout_width="@dimen/swipe_item_menu_width"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/red500"
        android:gravity="center"
        android:text="置顶"
        android:textColor="@color/white"/>-->

    <TextView
        android:id="@+id/tv_right_menu"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#2196f3"
        android:gravity="center"
        android:text="删除"
        android:textColor="#fff"/>

    <include layout="@layout/apis_item_memo_item"/>

</cc.catface.base.utils.android.view.recyclerview.swipe.SwipeItemLayout>